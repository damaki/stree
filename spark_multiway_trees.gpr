with "config/spark_multiway_trees_config.gpr";
with "sparklib.gpr";
project Spark_Multiway_Trees is

   for Library_Name use "Spark_Multiway_Trees";
   for Library_Version use Project'Library_Name & ".so." & Spark_Multiway_Trees_Config.Crate_Version;

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Spark_Multiway_Trees_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Library_Dir use "lib";

   type Library_Type_Type is ("relocatable", "static", "static-pic");
   Library_Type : Library_Type_Type :=
     external ("SPARK_MULTIWAY_TREES_LIBRARY_TYPE", external ("LIBRARY_TYPE", "static"));
   for Library_Kind use Library_Type;

   package Compiler is
      for Default_Switches ("Ada") use Spark_Multiway_Trees_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Spark_Multiway_Trees;
